<!-- activity_main.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".ShoppingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <!-- Cart Icon -->
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/cart_icon" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Workout Clothing Items -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Item 1 -->
                    <ImageView
                        android:id="@+id/item1Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/workout_item1"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/item1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item1Image"
                        android:text="Workout Item 1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/item1Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item1Image"
                        android:layout_below="@id/item1Name"
                        android:text="Price: $24.99"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                    <Button
                        android:id="@+id/viewMore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View More" />

                </RelativeLayout>

                <!-- Item 2 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/item2Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/workout_item2"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/item2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item2Image"
                        android:text="Workout Item 2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/item2Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item2Image"
                        android:layout_below="@id/item2Name"
                        android:text="Price: $19.99"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

                <!-- Item 3 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/item3Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/workout_item3"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/item3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item3Image"
                        android:text="Workout Item 3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/item3Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item3Image"
                        android:layout_below="@id/item3Name"
                        android:text="Price: $29.99"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

                <!-- Workout Clothing Item 4 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/item4Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/workout_item3"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/item4Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item4Image"
                        android:text="Workout Item 3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/item4Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item4Image"
                        android:layout_below="@id/item4Name"
                        android:text="Price: $29.99"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

                <!-- Workout Clothing Item 5 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/item5Image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/workout_item3"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/item5Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item5Image"
                        android:text="Workout Item 3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/item5Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item5Image"
                        android:layout_below="@id/item5Name"
                        android:text="Price: $29.99"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
