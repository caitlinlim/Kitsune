<!-- activity_main.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".ShoppingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/homeButtonShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Workout Clothing Items -->
                <RelativeLayout
                    android:id="@+id/leggingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="8dp">

                    <!-- Item 1 -->
                    <ImageView
                        android:id="@+id/leggingsImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/leggings" />

                    <TextView
                        android:id="@+id/leggingsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/leggingsImage"
                        android:text="Women's Leggings"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/leggingsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/leggingsName"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/leggingsImage"
                        android:text="Price: $64.99"
                        android:textSize="16sp" />


                </RelativeLayout>

                <!-- Item 2 -->
                <RelativeLayout
                    android:id="@+id/mensTankButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/mensTankImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/menstank" />

                    <TextView
                        android:id="@+id/mensTankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/mensTankImage"
                        android:text="Men's Tank Top"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mensTankPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mensTankName"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/mensTankImage"
                        android:text="Price: $29.99"
                        android:textSize="16sp" />

                </RelativeLayout>

                <!-- Item 3 -->
                <RelativeLayout
                    android:id="@+id/sportsBraButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/sportsBraImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sportsbra" />

                    <TextView
                        android:id="@+id/sportsBraName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/sportsBraImage"
                        android:text="Sports Bra"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sportsBraPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sportsBraName"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/sportsBraImage"
                        android:text="Price: $34.99"
                        android:textSize="16sp" />

                </RelativeLayout>

                <!-- Workout Clothing Item 4 -->
                <RelativeLayout
                    android:id="@+id/shortsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/shortsImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mensshorts" />

                    <TextView
                        android:id="@+id/shortsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/shortsImage"
                        android:text="Men's Shorts"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shortsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/shortsName"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/shortsImage"
                        android:text="Price: $38.99"
                        android:textSize="16sp" />

                </RelativeLayout>

                <!-- Workout Clothing Item 5 -->
                <RelativeLayout
                    android:id="@+id/womensTankButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/womensTankImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/womenstank" />

                    <TextView
                        android:id="@+id/womensTankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/womensTankImage"
                        android:text="Women's Tank Top"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/womensTankPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/womensTankName"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/womensTankImage"
                        android:text="Price: $29.99"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
