<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFD4C4"
    android:padding="16dp">

    <!-- Workout Name -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/workoutsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Workouts"
            android:textColor="#FFB2A8"
            android:textSize="44sp"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/rounded_border"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/scheduleButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFB2A8"
                android:layout_marginEnd="4dp"
                android:text="View Schedule" />

            <Button
                android:id="@+id/createButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="#FFB2A8"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="Create Workout" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:padding="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Workout List"
            android:textSize="34sp"
            android:textColor="#FFB2A8"
            android:background="@drawable/rounded_border"
            android:gravity="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <ListView
            android:id="@+id/listViewWorkouts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:padding="8dp"></ListView>

    </LinearLayout>

</LinearLayout>