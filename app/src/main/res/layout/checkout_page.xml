<?xml version="1.0" encoding="utf-8"?>
<!-- activity_checkout.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".CheckoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Checkout Header -->
            <TextView
                android:id="@+id/checkoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Billing Information -->
            <TextView
                android:id="@+id/billingInfoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Billing Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_marginBottom="16dp"/>

            <!-- Payment Information -->
            <TextView
                android:id="@+id/paymentInfoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/cardNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Number"
                android:inputType="number"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/expiryDateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Expiry Date"
                    android:inputType="number"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/cvvEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:inputType="number"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Order Summary -->
            <TextView
                android:id="@+id/orderSummaryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Cart Items -->
            <RelativeLayout
                android:id="@+id/cartItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/cartItemImage1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cart_item1"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/cartItemName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cartItemImage1"
                    android:text="Workout Item 1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/cartItemPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cartItemImage1"
                    android:layout_below="@id/cartItemName1"
                    android:text="Price: $24.99"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/cartItemQuantity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cartItemPrice1"
                    android:layout_below="@id/cartItemName1"
                    android:text="Qty: 1"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

            </RelativeLayout>

            <!-- Total Price -->
            <TextView
                android:id="@+id/totalPriceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price: $24.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginTop="8dp"/>

            <!-- Place Order Button -->
            <Button
                android:id="@+id/placeOrderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
